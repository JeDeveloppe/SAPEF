<div class="col-12 col-sm-11 col-md-9 col-lg-6 col-xl-5 col-xxl-4 mb-3">
    <div class="card p-0 col-12 mb-4 h-100">
        <div class="card-header">{{ elu.statut }}</div>
        <div class="card-body d-flex align-items-center">
            <div class="col-3 d-flex justify-content-around">
                {% if elu.user.image | length > 0 %}
                    <img class="col-11" src="{{ asset('uploads/users/' ~ elu.user.image) }}" alt="Image du {{ elu.statut}}">
                {% else %}
                    <img class="col-11" src="{{ asset('uploads/placeholder.png') }}" alt="Image Ã  renseigner">
                {% endif %}
            </div>
            <div class="col-9 ps-2">
                <i class="fas fa-user"></i> {{ elu.user.name }} {{ elu.user.forName }}<br/>
                <small><i class="fas fa-briefcase"></i> {{ elu.user.job.name }} </small><br/>
                <small><i class="fas fa-location"></i> {{ elu.user.store.name }} </small><br/>
                {% if elu.user.phone is not null %}
                    <br/><i class="fas fa-mobile-alt"></i> : {{ elu.user.phone }}
                {% endif %}
            </div>
        </div>
    </div>
</div>