<div class="col-11 col-sm-9 col-md-8 col-lg-6 col-xxl-5 mb-3">
    <div class="card p-0 col-12 mb-4 h-100">
        <div class="card-header">{{ elu.role }}</div>
        <div class="card-body d-flex align-items-center">
            <div class="col-3 d-flex justify-content-center">
                {% if elu.name.image is not null %}
                    <img class="img-thumbnail" src="{{ vich_uploader_asset(elu.name, 'imageFile') }}"/>
                {% else %}
                    <img class="img-thumbnail" src="{{ asset('/build/images/design/placeholder.png') }}" alt="Image Ã  renseigner">
                {% endif %}
            </div>
            <div class="col-9 ps-2">
                <i class="fas fa-user"></i> {{ elu.name.firstname }} {{ elu.name.lastname }}<br/>
                <small><i class="fas fa-briefcase"></i> {{ elu.name.job.name }} </small><br/>
                <i class="fas fa-location"></i> {{ elu.name.shop.name }} - {{ elu.name.shop.counterMark }}<br/>
                {% if elu.name.phone is not null %}
                    <br/><i class="fas fa-mobile-alt"></i> : {{ elu.name.phone }}
                {% endif %}
            </div>
        </div>
    </div>
</div>