<div class="card p-0">
    <div class="card-header">Mes paiements</div>
    <div class="card-body">
        <table class="table table-striped text-center">
            <tr>
                <th>Date:</th>
                <th>Montant:</th>
                <th>Commentaire:</th>
            </tr>
            {% if paiements | length > 0 %}
                {% for paiement in paiements %}
                    <tr>
                        <td>{{ paiement.paymentAt | date('d-m-Y') }}</td>
                        <td>{{ (paiement.amount / 100) | number_format(2, '.', ',') }} €</td>
                        <td>{{ paiement.comment }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="3">Aucun pour le moment, pensez à votre cotisation... <i class="fa-regular fa-face-laugh-wink"></i></td>
                </tr>
            {% endif %}

        </table>
    </div>
</div>